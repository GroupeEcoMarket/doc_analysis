.idea/
*.swp
*.swo
*~
.DS_Store
Thumbs.db

# ===================================================================
# Données, Modèles, Logs et Artéfacts (NON VERSIONNÉS)
# On ignore le contenu des dossiers, mais on garde la structure via .gitkeep
# ===================================================================
# Données d'entrée, de sortie et temporaires
/data/*
!/data/.gitkeep
!/data/input/.gitkeep
!/data/output/.gitkeep
!/data/processed/.gitkeep
!/data/temp_storage/.gitkeep

# Modèles Machine Learning (souvent volumineux)
/models/*
!/models/.gitkeep

# Données d'entraînement et artéfacts
/training_data/*
!/training_data/raw/.gitkeep
!/training_data/processed/.gitkeep
!/training_data/artifacts/.gitkeep

# Fichiers de log et de verrouillage (runtime)
/logs/
*.log
**/.locks/

# ===================================================================
# Rapports et Fichiers Générés
# ===================================================================
# Rapports de test et de couverture
.coverage
htmlcov/
.pytest_cache/

# Rapports de QA et autres fichiers générés
qa_report.html
meta.json
digest.txt